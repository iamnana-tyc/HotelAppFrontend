<h3 class="ui header">{{t "forms.h-a-p-i-room-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.roomNumber
      class=(if (v-get validationModel "roomNumber" "isInvalid") "error")
      label=(t "forms.h-a-p-i-room-e.roomNumber-caption")
      data-test-h-a-p-i-room-e-roomNumber=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "roomNumber" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.price
      class=(if (v-get validationModel "price" "isInvalid") "error")
      label=(t "forms.h-a-p-i-room-e.price-caption")
      data-test-h-a-p-i-room-e-price=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "price" "message")}}
  </div>
  <div class="field" data-test-h-a-p-i-room-e-roomType="true">
    <label>{{t "forms.h-a-p-i-room-e.roomType-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "h-a-p-i-comfort-level-type")
      value=model.roomType
      class=(if (v-get validationModel "roomType" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "roomType" "message")}}
  </div>
</form>
